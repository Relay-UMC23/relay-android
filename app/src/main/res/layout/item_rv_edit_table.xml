<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    android:background="@color/btn_background_gray">

    <EditText
        android:id="@+id/et_tmp_day"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:textSize="22sp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_tmp_day"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="22sp"
        android:text="요일"
        app:layout_constraintStart_toEndOf="@id/et_tmp_day"
        app:layout_constraintTop_toTopOf="@id/et_tmp_day"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="9:00"
        app:layout_constraintStart_toEndOf="@id/tv_tmp_day"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"/>


    <Button
        android:id="@+id/btn_end"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="10:00"
        app:layout_constraintStart_toEndOf="@id/btn_start"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        style="?android:attr/borderlessButtonStyle"/>


    <ImageButton
        android:id="@+id/btn_remove"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_arrow_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="3dp" />

    <TextView
        android:id="@+id/tv_tmp_goal"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:textSize="22sp"
        android:text="@string/goal"
        app:layout_constraintStart_toStartOf="@id/et_tmp_day"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp" />

    <Spinner
        android:id="@+id/dropdown_goal"
        android:layout_width="150dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toEndOf="@id/tv_tmp_goal"
        app:layout_constraintBottom_toBottomOf="@id/tv_tmp_goal"
        android:layout_marginStart="20dp" />

    <EditText
        android:id="@+id/et_tmp_goal"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/dropdown_goal"
        app:layout_constraintBottom_toBottomOf="@id/tv_tmp_goal"
        android:layout_marginStart="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>