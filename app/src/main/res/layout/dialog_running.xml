<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_big_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="00:00:00"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_text_big_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="시간"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_time"
        app:layout_constraintStart_toStartOf="@+id/tv_big_time"
        app:layout_constraintTop_toBottomOf="@+id/tv_big_time" />

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_big_time" />

    <TextView
        android:id="@+id/tv_big_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="00.0"
        android:textColor="@color/black"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/tv_text_big_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="킬로미터"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_km"
        app:layout_constraintStart_toStartOf="@+id/tv_big_km"
        app:layout_constraintTop_toBottomOf="@+id/tv_big_km" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_big_km" />

    <TextView
        android:id="@+id/tv_big_now_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/divider3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/tv_text_km_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_now_pace"
        app:layout_constraintStart_toStartOf="@+id/tv_big_now_pace"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_big_now_pace" />

    <TextView
        android:id="@+id/tv_text_big_now_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="현재 페이스"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_now_pace"
        app:layout_constraintStart_toStartOf="@+id/tv_big_now_pace"
        app:layout_constraintTop_toBottomOf="@+id/tv_big_now_pace" />

    <View
        android:id="@+id/divider3"
        android:layout_width="1dp"
        android:layout_height="150dp"
        android:layout_marginBottom="60dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <TextView
        android:id="@+id/tv_big_avg_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider3"
        app:layout_constraintTop_toTopOf="@+id/tv_big_now_pace" />

    <TextView
        android:id="@+id/tv_text_big_avg_pace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="평균 페이스"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_avg_pace"
        app:layout_constraintStart_toStartOf="@+id/tv_big_avg_pace"
        app:layout_constraintTop_toBottomOf="@+id/tv_big_avg_pace" />

    <TextView
        android:id="@+id/tv_text_km_h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="km/h"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#7F7F7F"
        app:layout_constraintEnd_toEndOf="@+id/tv_big_avg_pace"
        app:layout_constraintStart_toStartOf="@+id/tv_big_avg_pace"
        app:layout_constraintTop_toBottomOf="@+id/tv_text_big_avg_pace" />

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_close_24" />

</androidx.constraintlayout.widget.ConstraintLayout>